+/obj/vehicle/space/speedbike/speedwagon
+	name = "BM Speedwagon"
+	desc = "Push it to the limit, walk along the razor's edge."
+	icon = 'icons/obj/car.dmi'
+	icon_state = "speedwagon"
+	layer = LYING_MOB_LAYER
